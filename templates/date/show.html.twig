{% extends 'base.html.twig' %}

{% block title %}Date{% endblock %}

{% block body %}
    <h1>Date</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ date.id }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ date.datetime ? date.datetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Place_name</th>
                <td>{{ date.placeName }}</td>
            </tr>
            <tr>
                <th>Place_url</th>
                <td>{{ date.placeUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_date_index') }}">back to list</a>

    <a href="{{ path('app_date_edit', {'id': date.id}) }}">edit</a>

    {{ include('date/_delete_form.html.twig') }}
